{% endblock %}

{% block main %}
    <article>
        <img src="{{ event.image }}" alt="" />
        <h1>{{ event.title }}</h1>
        <p>{{ event.description|raw }}</p>

        <hr>

        <p>Organizer: {{ event.organizer }}</p>
        <p>Permalien: <a href="{{ event.link }}">{{ event.link }}</a></p>
    </article>
